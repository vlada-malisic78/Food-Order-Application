{
  "compilerOptions": {
    "noEmit": true,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "typeRoots": ["src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
